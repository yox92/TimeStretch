{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@spt/*": [
        "external/server/project/src/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/external","src/external/*"]
}